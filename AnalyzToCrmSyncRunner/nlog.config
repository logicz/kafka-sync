<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Info"
      internalLogFile="c:\temp\internal-nlog.txt">

  <!-- enable asp.net core layout renderers -->
  <extensions>
    <add assembly="NLog.Web.AspNetCore"/>
  </extensions>

  <!-- the targets to write to -->
  <targets>
    <!-- write logs to file  -->
    <target xsi:type="File" name="allfile" fileName="logs/${shortdate}.log"
            layout="${longdate} ${uppercase:${level}} ${logger}: ${message} ${exception:format=tostring}" />

    <target xsi:type="File" name="ATCCardsConsumer" fileName="logs/ATCCardsConsumer_${shortdate}.log"
        layout="${longdate} ${uppercase:${level}} ${logger}: ${message} ${exception:format=tostring}" />
    <target xsi:type="File" name="ATCClientInfoConsumer" fileName="logs/ATCClientInfoConsumer_${shortdate}.log"
        layout="${longdate} ${uppercase:${level}} ${logger}: ${message} ${exception:format=tostring}" />

  </targets>
  <!-- rules to map from logger name to target -->
  <rules>
    <!--<logger name="*" minlevel="Trace" writeTo="allfile" />-->

    <logger name="AnalizToCrmCardsConsumer" minlevel="Trace" writeTo="ATCCardsConsumer" />
    <logger name="AnalizToCrmClientInfoConsumer" minlevel="Trace" writeTo="ATCClientInfoConsumer" />>

    <!--Skip non-critical Microsoft logs and so log only own logs-->
    <logger name="Microsoft.*" maxlevel="Info" final="true" />
    <!-- BlackHole without writeTo -->
  </rules>
</nlog>